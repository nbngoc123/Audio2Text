<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_splash"
    android:paddingHorizontal="32dp"
    android:paddingTop="64dp"
    android:paddingBottom="48dp">

    <!-- Ảnh minh hoạ -->
    <ImageView
        android:id="@+id/imageOnboarding"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="@string/onboarding_image"
        android:scaleType="centerInside"
        android:background="@drawable/bg_logo_round"
        android:padding="24dp"
        android:clipToOutline="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/titleOnboarding"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/titleOnboarding"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Convert Audio Effortlessly"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@id/descOnboarding"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Mô tả -->
    <TextView
        android:id="@+id/descOnboarding"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Easily turn your recordings into readable, editable text with one tap."
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:lineSpacingExtra="4dp"
        android:fontFamily="sans-serif-light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
